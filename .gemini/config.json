{
  "version": "1.0.0",
  "sisyphus": {
    "description": "Multi-Agent Orchestration System with External CLI Integration",
    "agents": {
      "orchestrator": {
        "name": "Orchestrator-Sisyphus",
        "model": "claude-opus",
        "external_cli": {
          "enabled": true,
          "cli": "codex",
          "command": "orchestrate",
          "description": "OpenAI Codex CLI for orchestration tasks"
        }
      },
      "frontend_engineer": {
        "name": "Frontend Engineer",
        "model": "claude-sonnet",
        "external_cli": {
          "enabled": true,
          "cli": "gemini",
          "command": "design",
          "description": "Google Gemini CLI for UI/UX design"
        }
      }
    }
  },
  "external_cli_config": {
    "codex": {
      "command_name": "codex",
      "binary_path": "~/.local/bin/codex",
      "alternative_paths": [
        "/usr/local/bin/codex",
        "$(which codex)"
      ],
      "required": false,
      "fallback_enabled": true,
      "fallback_message": "codex-cli를 사용할 수 없습니다. Claude 내부 에이전트로 계속 진행합니다."
    },
    "gemini": {
      "command_name": "gemini",
      "binary_path": "~/.local/bin/gemini",
      "alternative_paths": [
        "/usr/local/bin/gemini",
        "$(which gemini)"
      ],
      "required": false,
      "fallback_enabled": true,
      "fallback_message": "gemini-cli를 사용할 수 없습니다. Claude 내부 에이전트로 계속 진행합니다."
    }
  },
  "integration": {
    "enable_external_cli": true,
    "timeout_seconds": 300,
    "retry_on_failure": true,
    "max_retries": 2,
    "capture_output": true,
    "log_to_file": true,
    "log_directory": ".claude/logs"
  }
}
